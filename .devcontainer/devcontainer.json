{
    "name": "Azure SRE Agent Demo Lab",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "installBicep": true,
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
            "kubectl": "latest",
            "helm": "latest",
            "minikube": "none"
        },
        "ghcr.io/devcontainers/features/powershell:1": {
            "version": "latest"
        },
        "ghcr.io/azure/azure-dev/azd:latest": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-bicep",
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "ms-azuretools.vscode-docker",
                "redhat.vscode-yaml",
                "ms-vscode.powershell",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "humao.rest-client",
                "mhutchie.git-graph"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "pwsh",
                "powershell.powerShellAdditionalExePaths": {
                    "pwsh": "/usr/bin/pwsh"
                },
                "bicep.enableOutputTimestamps": true,
                "files.associations": {
                    "*.bicep": "bicep",
                    "*.bicepparam": "bicep"
                },
                "editor.formatOnSave": true,
                "[yaml]": {
                    "editor.defaultFormatter": "redhat.vscode-yaml"
                },
                "[bicep]": {
                    "editor.defaultFormatter": "ms-azuretools.vscode-bicep"
                }
            }
        }
    },
    "postCreateCommand": "bash .devcontainer/post-create.sh",
    "postStartCommand": "bash .devcontainer/post-start.sh",
    "remoteEnv": {
        "AZURE_CLI_USE_DEVICE_CODE": "true"
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.azure,target=/home/vscode/.azure,type=bind,consistency=cached"
    ],
    "forwardPorts": [
        8080,
        3000,
        3001,
        3002
    ],
    "portsAttributes": {
        "8080": {
            "label": "Store Front",
            "onAutoForward": "notify"
        },
        "3000": {
            "label": "Order Service",
            "onAutoForward": "silent"
        },
        "3001": {
            "label": "Makeline Service",
            "onAutoForward": "silent"
        },
        "3002": {
            "label": "Product Service",
            "onAutoForward": "silent"
        }
    },
    "remoteUser": "vscode"
}
